#!/bin/bash

start-test() {
    ### Disabled until NATS is validated to pass tests
    # KINE_IMAGE=$IMAGE KINE_ENDPOINT="nats://?embedServer&dontListen" GO_TEST_EXTRAFLAGS="-tags nats" run-apiserver-tests
    KINE_IMAGE=$IMAGE KINE_ENDPOINT="nats://?embedServer&dontListen" provision-kine
